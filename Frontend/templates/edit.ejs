<% layout('base') -%>

<% const title = "Edit Movies"; %>

<div class="content">
  <h1 class="heading"><%= movie.title %></h1>
  <p class="description">Edit Movie Rating</p>

  <!-- Render the form manually here since there's no render_form in EJS -->
  <form action="/edit/<%= movie.id %>" method="POST" novalidate>
    <!-- Example form fields, assuming you're passing 'form' object -->
    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="number" name="rating" id="rating" class="form-control" />
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea name="review" id="review" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
