<% layout('base') -%>

<% block('title', 'Favorite Movies') %>

<div class="container">
  <h1 class="heading">My top 10 Movies</h1>
  <p class="description">These are my all-time favorite movies.</p>

  <% movies.forEach((movie) => { %>
    <div class="card">
      <div class="front" style="background-image: url('<%= movie.image_url %>')">
        <p class="large"><%= movie.ranking %></p>
      </div>
      <div class="back">
        <div>
        <div class="title">
          <%= movie.title %>
          <span class="release_date"><%= movie.year %></span>
        </div>
        <div class="rating">
          <label><%= movie.rating %></label>
          <i class="fas fa-star star"></i>
        </div>
        <p class="review">"<%= movie.review %>"</p>
        <p class="overview"><%= movie.description %></p>

        <a href="/edit/<%= movie.id %>" class="button">Update</a>
        <a href="/delete/<%= movie.id %>" class="button delete-button">Delete</a>
      </div>
      </div>
    </div>
  <% }) %>
</div>

<div class="container text-center add">
  <a href="/add" class="button">Add Movie</a>
</div>
